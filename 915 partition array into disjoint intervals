class Solution {
public:
    int partitionDisjoint(vector<int>& nums) {
        int n = nums.size();
        int maxLeft = nums[0], maxSoFar = nums[0], partitionIdx = 0;

        for (int i = 1; i < n; ++i) {
            maxSoFar = max(maxSoFar, nums[i]);
            if (nums[i] < maxLeft) {
                maxLeft = maxSoFar;
                partitionIdx = i;
            }
        }

        return partitionIdx + 1;
    }
};
